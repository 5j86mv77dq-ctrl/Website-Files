---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post, allPosts: posts },
  }));
}

const { post, allPosts } = Astro.props;
const { Content } = await post.render();

// Get recent posts excluding the current one, sorted by date
const recentPosts = allPosts
  .filter((p) => p.slug !== post.slug)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="container">
    <!-- BACK TO BLOG BUTTON - NEW -->
    <a href="/blog" class="back-link">‚Üê Back to Blog</a>

    {post.data.image && (
      <img
        src={post.data.image}
        alt={post.data.title}
        class="featured-image"
      />
    )}
    <h1>{post.data.title}</h1>
    <div class="post-meta">
      {new Date(post.data.date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </div>
    
    <Content />
    
    <div class="email-signup">
      <h3>Enjoyed this post?</h3>
      <p>Subscribe to receive new essays and updates.</p>
      <p style="color: #6b7280; font-size: 0.875rem;">ConvertKit form will be embedded here.</p>
    </div>

    {recentPosts.length > 0 && (
      <section class="keep-reading">
        <h2>Keep Reading</h2>
        <div class="keep-reading-grid">
          {recentPosts.map((recentPost) => (
            <a href={`/blog/${recentPost.slug}`} class="keep-reading-card">
              {recentPost.data.image ? (
                <img
                  src={recentPost.data.image}
                  alt={recentPost.data.title}
                  class="keep-reading-image"
                />
              ) : (
                <div class="keep-reading-placeholder"></div>
              )}
              <h3>{recentPost.data.title}</h3>
            </a>
          ))}
        </div>
      </section>
    )}
  </article>
</BaseLayout>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #6b7280;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
  }
  
  .back-link:hover {
    color: #2563eb;
    text-decoration: none;
  }

  .keep-reading {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid #e5e7eb;
  }

  .keep-reading h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: #111827;
  }

  .keep-reading-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .keep-reading-card {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .keep-reading-card:hover {
    transform: translateY(-4px);
  }

  .keep-reading-image {
    width: 100%;
    height: 140px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 0.75rem;
  }

  .keep-reading-placeholder {
    width: 100%;
    height: 140px;
    background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
    border-radius: 8px;
    margin-bottom: 0.75rem;
  }

  .keep-reading-card h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #111827;
    line-height: 1.4;
    margin: 0;
  }

  .keep-reading-card:hover h3 {
    color: #2563eb;
  }
</style>